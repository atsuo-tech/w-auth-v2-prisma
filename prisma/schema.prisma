generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model AuthUser {
  uniqueId      String         @id @default(cuid())
  userAuths     UserAuth[]
  loginSessions LoginSession[]
}

enum AuthType {
  PASSWORD
}

model UserAuth {
  uniqueId String
  user     AuthUser @relation(fields: [uniqueId], references: [uniqueId])
  authType AuthType
  value    String

  @@unique([uniqueId, authType])
}

model LoginSession {
  id           String   @id @default(cuid())
  userId       String
  user         AuthUser @relation(fields: [userId], references: [uniqueId])
  sessionToken String   @unique
  createdAt    DateTime @default(now())
  expiresAt    DateTime
}

enum SystemTokenType {
  CREATE_ACCOUNT
}

model SystemToken {
  id        String          @id @default(cuid())
  tokenHash String          @unique
  type      SystemTokenType
  createdAt DateTime        @default(now())
  expiresAt DateTime
}
